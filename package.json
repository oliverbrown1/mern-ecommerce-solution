{
    "name": "mern-marketplace",
    "version": "1.0.0",
    "private": true,
    "workspaces": [
      "frontend",
      "backend"
    ],
    "scripts": {
      "start": "concurrently \"npm run frontend\" \"npm run backend\"",
      "frontend": "cd frontend && npm run dev",
      "backend": "cd backend && npm run dev",
      "inst": "npm install && cd frontend && npm run build && cd ../backend && npm install"
    },
    "devDependencies": {
      "concurrently": "^8.0.0"
    }
  }
  